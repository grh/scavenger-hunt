$main_color: <%= Options.color %>;

.navbar-default {
  background-color: white;
  border-style: none;
  border-bottom: solid $main_color;
}

.school-logo {
  color: $main_color;
  font-size: 200%;
}

.navbar-default .navbar-collapse li a {
  color: $main_color;
}

.col-centered {
  float: none;
  margin: 0 auto;
}

.dashboard-table {
  max-height: 400px;
  overflow: auto;
}

.dashboard-actions {
  color: $main_color;
}

.btn-unlv-red {
  background-color: $main_color;
  color: white;
}

a {
  color: $main_color;
}

@media screen and (min-width: 768px) {
  #main {
    padding-top: 40px;
  }
}

hr {
  border-color: $main_color;
  border-width: 2px;
}

.description {
  padding-top: 1em;
  padding-left: 1.55em;
  padding-bottom: 1em;
}

.qr table {
  margin: 2em auto;
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
}

.qr td {
  border-left: solid 10px #000;
  padding: 0;
  margin: 0;
  width: 0px;
  height: 10px;
}

.qr td.black { border-color: #000; }
.qr td.white { border-color: #fff; }
