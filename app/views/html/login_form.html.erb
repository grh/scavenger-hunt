<%= provide(:title, 'Login') %>

<div class="container">
  <div class="row">
    <div class="col-md-7 col-centered">
      <h3>Login</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 col-centered">
      <%= form_for @current_user, url: create_session_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, value: nil, class: 'form-control', required: 'true' %>
          </div>
          <div class="form-group">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control', required: 'true' %>
          </div>
          <%= f.submit 'Login', class: 'btn btn-default' %>
          <%= hidden_field_tag :redirect_to, params[:redirect_to] %>
      <% end %>
    </div>
  </div>
</div>