<%= form_for @option, url: (current_page?(new_option_form_path) ? create_option_path : update_option_path), method: :post do |f| %>
    <div class="form-group">
      <%= f.label :logo, 'Logo' %>
      <%= f.text_field :logo, class: 'form-control', required: 'true' %>
    </div>
    <div class="form-group">
      <%= f.label :color, 'Color' %>
      <%= f.text_field :color, class: 'form-control', required: 'true' %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-default' %>
<% end %>